<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease-in-out;
      }

      .card-img-top {
        height: 180px;
        object-fit: cover;
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
      }

      .card-body h5 {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h2 class="mb-4 fw-bold text-center">Latest Blogs</h2>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100 shadow-sm rounded-4">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Cover image for <%= blog.title %>" />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-truncate"><%= blog.title %></h5>
              <div class="mt-auto">
                <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary w-100">View Blog</a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
